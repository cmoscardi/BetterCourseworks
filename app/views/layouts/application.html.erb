<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag('global') %>
</head>
<body>
<%= render 'layouts/header' %>
<% flash.each do |key, value| %>
  <div class="flash <%= key %>"><%= value %></div>
<% end %>
<%= yield %>

<%= render 'layouts/footer' %>
</body>
</html>
